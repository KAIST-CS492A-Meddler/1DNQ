<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorSkyBlue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageView
                    android:id="@+id/nav_header_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    android:src="@drawable/odnq_logo_charcter_white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_gravity="center"
                    android:text="A NEW QUESTION CARD\nHAS ARRIVED"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:descendantFocusability="beforeDescendants"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0px"
                        android:layout_height="80dp"
                        android:layout_weight="10"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="10dp"
                        android:background="#eeeeee">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Examiner" />

                        <TextView
                            android:id="@+id/cardsolving_tv_examiner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Young-Min Baek"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            />

                        <TextView
                            android:id="@+id/cardsolving_tv_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="from [Word Conquerer] Group"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            />

                    </LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="80dp"
                        android:background="#cccccc"/>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0px"
                        android:layout_height="80dp"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:background="#eeeeee">

                        <TextView
                            android:id="@+id/cardsolving_tv_timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15"
                            android:textSize="35dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="secs left"
                            android:textSize="15dp"
                            android:textColor="@color/colorPrimaryDark"
                            />

                    </LinearLayout>



                </LinearLayout>

                <TextView
                    android:id="@+id/cardsolving_tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="30dp"
                    android:text="What is the meaning of\nthis word?"
                    android:textSize="18dp"
                    android:textColor="#777777"
                    />

                <TextView
                    android:id="@+id/cardsolving_tv_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:text="IMMIGRATION"
                    android:textSize="21dp"
                    android:textColor="@color/colorSkyBlue"
                    android:textStyle="bold"
                    android:background="@color/colorLightSkyBlue"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="#eeeeee"
                    android:paddingLeft="10dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="40dp">

                    <EditText
                        android:id="@+id/cardsolving_et_answer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:hint="Write your answer here"
                        android:lines="2"
                        android:maxLines="3"
                        android:maxLength="500"
                        android:scrollbars="vertical"
                        android:textColorHint="#bbbbbb"
                        android:background="#eeeeee"
                        />

                    <Button
                        android:id="@+id/cardsolving_btn_submit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorPrimaryDark"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:onClick="mOnClick"
                        android:text="SUBMIT"/>

                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <Button
                        android:id="@+id/cardsolving_btn_showhint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Show hint"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="13dp"
                        android:onClick="mOnClick"
                        android:layout_gravity="center_horizontal"
                        android:background="#dddddd"/>

                    <TextView
                        android:id="@+id/cardsolving_tv_hint"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:textSize="13dp"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:text="hints"/>

                </LinearLayout>

            </LinearLayout>

            <!--<Button-->
                <!--android:id="@+id/cardsolving_btn_submit"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="30dp"-->
                <!--android:layout_marginRight="30dp"-->
                <!--android:layout_marginBottom="15dp"-->
                <!--android:padding="10dp"-->
                <!--android:textColor="@color/colorSkyBlue"-->
                <!--android:textSize="20dp"-->
                <!--android:background="#ffffff"-->
                <!--android:enabled="true"-->
                <!--android:onClick="mOnClick"-->
                <!--android:text="SUBMIT MY ANSWER"/>-->
            <!--android:shadowRadius="10"-->
            <!--android:shadowColor="@color/colorSkyBlue"-->



        </LinearLayout>


    </ScrollView>


</LinearLayout>
